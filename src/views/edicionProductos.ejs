<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head") %>
        <link href="/css/styles.css" rel="stylesheet">

    <body>
        <%- include("./partials/header") %>    
<main>
    <section class="register-body">
        <form action="/productos/<%= productToEdit.id %>?_method=PATCH" method="POST">
            
            <p class="login">
                <label for="name">Nombre del producto</label>   
                <input type="text" id="name" name="name" value="<%= productToEdit.name %>">
            </p>                
            
            <p class="login">
                <label for="description">Descripción</label>   
                <input type="text" id="description" name="description" value="<%= productToEdit.description %>">
            </p>
            
            <h3>Modificar imagen del producto</h3>
            <br>
            
            <label for="image"></label>
            <input type="file" id="image" name="image">
            
            <h3>Categoría</h3>

            <select class= "selects" name="category_id" id="" required>
                <% allCategories.forEach(category => { %>
                 <option value="<%= category.id %>" <% if (productToEdit.category_id == category.id) { %><%= 'selected' %><% }; %>><%=   category.name %></option>
                <% }); %>
            </select>
            
            <h3>Marca</h3>

            <select class= "selects" name="brand_id" id="" required>
                <% allBrands.forEach(brand => { %>
                 <option value="<%= brand.id %>" <% if (productToEdit.brand_id == brand.id) { %><%= 'selected' %><% }; %>><%=   brand.name %></option>
                <% }); %>
            </select>

            <p class="login">
                <label for="size">Talle</label>   
                <input type="text" id="size" name="size" value="<%= productToEdit.size %>">
            </p>
            
            <p class="login">
                <label for="pass">Precio</label>   
                <input type="text" name="price" value="<%= productToEdit.price %>">
            </p>
            
            <p class="login">
                <label for="discount">Descuento (en %)</label>   
                <input type="text" id="discount" name="discount" value="<%= productToEdit.discount %>">
            </p>
            

            <button type="submit" class="botones-juntos">Guardar</button>
            <button type="reset" class="botones-juntos">Borrar</button>
        </form>

            <form action="/productos/delete/<%= productToEdit.id %>" method="POST">
                <button type="submit" class="botones-juntos">ELIMINAR</button>
            </form>


        
    </section>
</main>
</body>
<%- include("./partials/footer")%> 
</html>